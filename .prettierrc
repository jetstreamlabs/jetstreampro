{
  "arrowParens": "always",
  "bracketSameLine": true,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 120,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "semi": false,
        "bracketSpacing": true,
        "trailingComma": "es5",
        "htmlWhitespaceSensitivity": "css"
      }
    },
    {
      "files": "*.vue",
      "options": {
        "semi": false,
        "indentScriptAndStyle": false,
        "bracketSameLine": true,
        "bracketSpacing": true,
        "trailingComma": "es5",
        "htmlWhitespaceSensitivity": "css"
      }
    },
    {
      "files": "*.md",
      "options": {
        "htmlWhitespaceSensitivity": "ignore"
      }
    }
  ]
}
