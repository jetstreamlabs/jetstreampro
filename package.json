{
	"private": true,
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"prod": "vite build",
		"jas": "php artisan ziggy:generate && php artisan zora:generate",
		"ssr": "vite build --config vite.ssr.config.js",
		"start": "node public/render/ssr.js",
		"kill": "kill -9 $(lsof -ti:3000)",
		"lint": "php ./vendor/bin/styleci analyze -c"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"header-max-length": [
				2,
				"always",
				120
			],
			"type-enum": [
				2,
				"always",
				[
					"breaking",
					"feat",
					"fix",
					"task",
					"refactor",
					"docs",
					"chore"
				]
			]
		}
	},
	"devDependencies": {
		"@commitlint/cli": "^16.0.1",
		"@commitlint/config-conventional": "^16.0.0",
		"@inertiajs/progress": "^0.2.6",
		"@semantic-release/changelog": "^6.0.1",
		"@semantic-release/git": "^10.0.1",
		"@tailwindcss/forms": "^0.4.0",
		"@tailwindcss/typography": "^0.5.0",
		"@vitejs/plugin-vue": "^2.0.1",
		"@vue/compiler-sfc": "^3.2.27",
		"dotenv": "^14.2.0",
		"dotenv-expand": "^5.1.0",
		"husky": "^7.0.4",
		"larasocket-js": "^1.0.16",
		"laravel-echo": "^1.11.3",
		"postcss": "^8.1.14",
		"postcss-import": "^14.0.2",
		"semantic-release": "^18.0.1",
		"tailwindcss": "^3.0.0",
		"unplugin-auto-import": "^0.5.5",
		"unplugin-vue-components": "^0.17.13",
		"vite": "^2.7.10",
		"vue-loader": "^17.0.0"
	},
	"dependencies": {
		"@inertiajs/inertia": "^0.11.0",
		"@inertiajs/inertia-vue3": "^0.6.0",
		"@inertiajs/server": "^0.1.0",
		"@vue/server-renderer": "^3.2.26",
		"axios": "^0.25",
		"dayjs": "^1.10.7",
		"lodash": "^4.17.19",
		"mitt": "^3.0.0",
		"vue": "^3.0.5",
		"vuex": "^4.0.2"
	}
}
