{
  "private": true,
  "scripts": {
    "dev": "npm run build:assets && vite",
    "build": "npm run build",
    "prod": "npm run build:assets && vite build",
    "ssr": "vite build --config vite.ssr.config.js",
    "start": "node public/render/ssr.js",
    "kill": "kill -9 $(lsof -ti:3000)",
    "lint": "php ./vendor/bin/styleci analyze -c",
    "build:assets": "php artisan ziggy:generate && php artisan zora:generate"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "type-enum": [
        2,
        "always",
        [
          "breaking",
          "feat",
          "fix",
          "task",
          "refactor",
          "docs",
          "chore"
        ]
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@headlessui/vue": "^1.7.0",
    "@iconify-json/heroicons-outline": "^1.1.4",
    "@iconify-json/heroicons-solid": "^1.1.5",
    "@inertiajs/progress": "^0.2",
    "@semantic-release/changelog": "^6.0",
    "@semantic-release/git": "^10.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.1",
    "@tailwindcss/typography": "^0.5",
    "@types/ziggy-js": "^1.3.2",
    "@vitejs/plugin-vue": "^2.3",
    "@vue/compiler-sfc": "^3.2",
    "autoprefixer": "^10.4.8",
    "dotenv": "^16.0",
    "dotenv-expand": "^9.0",
    "husky": "^8.0",
    "larasocket-js": "^1.0",
    "laravel-echo": "^1.14.0",
    "postcss": "^8.4.16",
    "postcss-import": "^15.0",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "semantic-release": "^19.0",
    "tailwindcss": "^3.1",
    "unplugin-auto-import": "^0.11",
    "unplugin-icons": "^0.14.9",
    "unplugin-vue-components": "^0.22",
    "vite": "^2.9.13",
    "vue-loader": "^17.0",
    "ziggy-js": "^1.4.6"
  },
  "dependencies": {
    "@inertiajs/inertia": "^0.11",
    "@inertiajs/inertia-vue3": "^0.6",
    "@inertiajs/server": "^0.1",
    "@vue/server-renderer": "^3.2",
    "axios": "^0.27.2",
    "dayjs": "^1.11.5",
    "lodash": "^4.0",
    "mitt": "^3.0",
    "vue": "^3.0",
    "vuex": "^4.0"
  }
}
