{
	"private": true,
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"prod": "vite build",
		"jas": "php artisan ziggy:generate && php artisan zora:generate",
		"ssr": "vite build --config vite.ssr.config.js",
		"start": "node public/render/ssr.js",
		"kill": "kill -9 $(lsof -ti:3000)",
		"lint": "php ./vendor/bin/styleci analyze -c"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"header-max-length": [
				2,
				"always",
				120
			],
			"type-enum": [
				2,
				"always",
				[
					"breaking",
					"feat",
					"fix",
					"task",
					"refactor",
					"docs",
					"chore"
				]
			]
		}
	},
	"devDependencies": {
		"@commitlint/cli": "^16.1",
		"@commitlint/config-conventional": "^16.0",
		"@inertiajs/progress": "^0.2",
		"@semantic-release/changelog": "^6.0",
		"@semantic-release/git": "^10.0",
		"@tailwindcss/forms": "^0.4",
		"@tailwindcss/typography": "^0.5",
		"@vitejs/plugin-vue": "^2.1",
		"@vue/compiler-sfc": "^3.2",
		"dotenv": "^16.0",
		"dotenv-expand": "^8.0",
		"husky": "^7.0",
		"larasocket-js": "^1.0",
		"laravel-echo": "^1.11",
		"postcss": "^8.1",
		"postcss-import": "^14.0",
		"semantic-release": "^19.0",
		"tailwindcss": "^3.0",
		"unplugin-auto-import": "^0.5",
		"unplugin-vue-components": "^0.17",
		"vite": "^2.8",
		"vue-loader": "^17.0"
	},
	"dependencies": {
		"@inertiajs/inertia": "^0.11",
		"@inertiajs/inertia-vue3": "^0.6",
		"@inertiajs/server": "^0.1",
		"@vue/server-renderer": "^3.2",
		"axios": "^0.25",
		"dayjs": "^1.0",
		"lodash": "^4.0",
		"mitt": "^3.0",
		"vue": "^3.0",
		"vuex": "^4.0"
	}
}
